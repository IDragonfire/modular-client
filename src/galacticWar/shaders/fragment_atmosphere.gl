
varying vec3 normal, eyeVec, halfVector;
varying float Ratio;
void main (void)
{

	vec3 N = normalize(normal);
	
	float r = (1.0-Ratio) * 0.5;
	float g = (1.0-Ratio) * 0.5;
	float b = (1.0-Ratio) * 1.0;
	
	
	gl_FragColor.r  = r;
	gl_FragColor.g  = g;
	gl_FragColor.b  = b;
	gl_FragColor.a = 1.0;
	
}